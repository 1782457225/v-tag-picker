@keyframes grow {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
.vtag-wrap {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}
.vtag-top {
  height: 50px;
  box-sizing: border-box;
  background: #F2F2F2;
  font-size: 0;
  margin-bottom: 15px;
  position: relative;
}
.vtag-top__empty {
  height: 0;
}
.vtag-top__content {
  padding: 10px 15px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
  white-space: nowrap;
  position: relative;
  height: 100%;
}
.vtag-top__right {
  text-align: right;
  padding-right: 15px;
  box-sizing: border-box;
  width: 94px;
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  background: linear-gradient(90deg, rgba(245, 245, 245, 0) 0%, #f5f5f5 100%);
}
.vtag-top__right:after {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.vtag-top__num {
  display: inline-block;
  vertical-align: middle;
  font-size: 16px;
  color: #fff;
  height: 32px;
  line-height: 32px;
  padding: 0 6px;
  border-radius: 16px;
  background: #000000;
}
.vtag-top__item {
  position: absolute;
  left: 15px;
}
.vtag-container {
  text-align: center;
  font-size: 0;
  position: relative;
  box-sizing: border-box;
}
.vtag-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 30px;
  background: linear-gradient(180deg, #ffffff 0%, rgba(255, 255, 255, 0) 100%);
  z-index: 2;
}
.vtag-container::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 30px;
  background: linear-gradient(180deg, #ffffff 0%, rgba(255, 255, 255, 0) 100%);
  transform: rotate(180deg);
  z-index: 2;
}
.vtag-container__content {
  min-width: 100px;
  overflow: auto;
  height: 100%;
  padding: 30px 25px;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}
.vtag-container__item {
  display: inline-block;
  margin: 0 15px 15px 0;
  position: relative;
}
.vtag-container__item.hide {
  margin: 0;
  padding: 0;
  width: 0!important;
  height: 0!important;
}
.vtag-container__item.animate {
  animation: grow linear alternate;
}
